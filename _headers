# Cache busting FORZADO para iconos actualizados
/*.ico
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/*.png
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/manifest.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/manifest.webmanifest
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Headers for correct MIME types
/assets/*.js
  Content-Type: application/javascript

/assets/*.css
  Content-Type: text/css

/sw.js
  Content-Type: application/javascript

/workbox-*.js
  Content-Type: application/javascript

/manifest.webmanifest
  Content-Type: application/manifest+json